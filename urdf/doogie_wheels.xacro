<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Include -->
    <!--xacro:include filename="$(find doogie_description)/urdf/common_properties.xacro"/-->

    <!-- macro: wheel -->
    <xacro:macro name="wheels" params="namespace wheel *mesh *joint_pose *axis">

    <link name="wheel/${wheel}">

        <inertial>
            <origin 
                xyz="0.0033664 1.419E-05 -1.7243E-07" 
                rpy="0.0 0.0 0.0"/>
            <mass 
                value="0.0029447"/>
            <inertia
                ixx="4.567E-07"
                ixy="4.239E-11"
                ixz="-5.3853E-13"
                iyy="2.3874E-07"
                iyz="-1.5273E-12"
                izz="2.3862E-07" />
        </inertial>

        <visual>
            <origin 
                xyz="0.0 0.0 0.0" 
                rpy="0.0 0.0 0.0"/>
            <geometry>
                <xacro:insert_block name="mesh"/>
            </geometry>
            <material name="dark"/>
        </visual>

        <collision>
            <origin 
                xyz="0.0 0.0 0.0" 
                rpy="0.0 0.0 0.0"/>
            <geometry>
                <xacro:insert_block name="mesh"/>
            </geometry>
        </collision>

    </link>

    <joint name="wheel/${wheel}_joint" type="continuous">
        <parent link="${namespace}/base_link"/>
        <child link="wheel/${wheel}"/>
        <xacro:insert_block name="joint_pose"/>
        <xacro:insert_block name="axis"/>
        <dynamics friction="0.3"/>
    </joint>

    <transmission name="wheel/${wheel}_trans" type="SimpleTransmission">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="$wheel/${wheel}_motor">
            <mechanicalReduction>1</mechanicalReduction>
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
        </actuator>
        <joint name="wheel/${wheel}_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
    </transmission>

    </xacro:macro>

</robot>