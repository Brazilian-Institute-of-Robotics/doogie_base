<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Include -->
    <!--xacro:include filename="$(find doogie_description)/urdf/common_properties.xacro"/-->

    <!-- macro: wheel -->
    <xacro:macro name="wheels" params="namespace sufix *joint_pose">

    <link name="wheel/${sufix}">

        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="2.6"/>
            <inertia ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.008" radius="0.046"/>
            </geometry>
            <material name="dark"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder length="0.008" radius="0.046"/>
            </geometry>
        </collision>

    </link>
    
    <gazebo reference="wheel/${sufix}_link">
        <material>Gazebo/DarkGrey</material>
        <selfCollide>false</selfCollide>
        <mu1 value="0.5"/>
        <mu2 value="0.5"/>
        <kp value="10000000.0" />
        <kd value="1" />
        <fdir1 value="1 0 0"/>
    </gazebo>

    <joint name="wheel/${sufix}_joint" type="continuous">
        <parent link="${namespace}/base_link"/>
        <child link="wheel/${sufix}"/>
        <xacro:insert_block name="joint_pose"/>
        <axis xyz="0 0 0"/>
    </joint>

    </xacro:macro>

</robot>